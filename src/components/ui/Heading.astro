---
import type { HTMLAttributes } from "astro/types";

const sizes = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h4",
  h5: "h5",
  h6: "h6",
} as const;

interface Props extends HTMLAttributes<"h1"> {
  tag: keyof typeof sizes;
  text: string;
}

const { tag, text, ...rest } = Astro.props;
const CustomTag = tag;
---

<CustomTag {...rest}>
  {text}
</CustomTag>
