---
// Images
// Old Images - Good
import CircuitBGLeft from "@/assets/images/desktop/circuit-grid-left.png";
import CircuitBGRight from "@/assets/images/desktop/circuit-grid-right.png";

// Test Images
import CircuitBGLeftMobile from "@/assets/images/mobile/circuit-bg-left-mobile.png";
import CircuitBGRightMobile from "@/assets/images/mobile/circuit-bg-right-mobile.png";

import CircuitBGLeftTablet from "@/assets/images/tablet/circuit-bg-left-tablet.png";
import CircuitBGRightTablet from "@/assets/images/tablet/circuit-bg-right-tablet.png";

import CircuitBGLeftDesktop from "@/assets/images/desktop/circuit-bg-left-desktop.png";
import CircuitBGRightDesktop from "@/assets/images/desktop/circuit-bg-right-desktop.png";

// Components
import Heading from "../ui/Heading.astro";
import LinkOrButton from "../ui/LinkOrButton.astro";
import Picture from "astro/components/Picture.astro";
import CustomPicture from "../ui/CustomPicture.astro";
---

<section class="hero grid-main hero-bg" aria-labelledby="hero-subtitle">
  <header class="hero__header">
    <span class="hero-title" data-text="We are Vyteca">We are Vyteca</span>
    <div class="hero__header-content">
      <Heading
        tag="h1"
        text="Custom hand-coded websites for Melbourne restaurants"
        class="hero__subtitle"
        id="hero-subtitle"
      />
      <p class="supporting__text">More bookings. Fuller tables. Stronger direct revenue.</p>
      <div class="btn__wrapper">
        <LinkOrButton as="a" href="/contact" text="Get started" variant="primary" />
        <LinkOrButton as="a" href="/projects" text="View work" variant="secondary" />
      </div>
    </div>
  </header>
  <div class="img__wrapper"></div>

  <div class="dot-bg"></div>

  <CustomPicture
    desktop={CircuitBGLeftDesktop}
    tablet={CircuitBGLeftTablet}
    mobile={CircuitBGLeftMobile}
    fallbackWidth={CircuitBGLeftMobile.width}
    fallbackHeight={CircuitBGLeftMobile.height}
    alt=""
    priority={false}
    class="cyber-grid left"
  />
  <CustomPicture
    desktop={CircuitBGRightDesktop}
    tablet={CircuitBGRightTablet}
    mobile={CircuitBGRightMobile}
    fallbackWidth={CircuitBGRightMobile.width}
    fallbackHeight={CircuitBGRightMobile.height}
    alt=""
    priority={false}
    class="cyber-grid right"
  />

